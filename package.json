{
  "name": "truffle-template",
  "version": "1.0.0",
  "description": "A simple project to quickly deploy ERC20 tokens.",
  "author": "DeFiFoFum",
  "main": "index.js",
  "scripts": {
    "ganache": "npx ganache-cli",
    "test": "truffle test",
    "compile": "truffle compile",
    "compile:all": "truffle compile --all",
    "gen:types": "typechain --target=truffle-v5 'build/contracts/*.json'",
    "postinstall": "yarn compile && yarn gen:types",
    "migrate:bsc": "tsc -p ./tsconfig.json --outDir ./migrations && truffle migrate --network bsc",
    "migrate:testnet": "tsc -p ./tsconfig.json --outDir ./migrations && truffle migrate --network testnet",
    "migrate:dev": "tsc -p ./tsconfig.json --outDir ./migrations && truffle migrate --network development --reset",
    "verify:bsc": "truffle run verify ERC20Token --network bsc",
    "verify:testnet": "truffle run verify ERC20Token --network testnet",
    "verify:testnet:mock": "truffle run verify ERC20MockFactory --network testnet && truffle run verify ERC20Mock --network testnet",
    "typecheck": "tsc --noEmit",
    "lint": "solhint './contracts/**/*.sol'",
    "lint:fix": "solhint './contracts/**/*.sol' --fix",
    "prettier:fix": "prettier --write 'contracts/**/*.sol'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier:fix && yarn lint:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@openzeppelin/contracts": "^4.3.3",
    "@typechain/truffle-v5": "^4.0.1",
    "dotenv": "^8.2.0",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.8",
    "solhint": "^3.3.4",
    "truffle": "^5.3.1",
    "truffle-hdwallet-provider": "^1.0.17",
    "truffle-plugin-verify": "^0.5.18",
    "typechain": "^4.0.3",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "ganache-cli": "^6.12.2"
  }
}
